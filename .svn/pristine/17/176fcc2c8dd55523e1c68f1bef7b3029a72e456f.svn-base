#toolbar_div {
	height: 10px;
}

#banner {
	background-image:url('../images/banner.png');
	padding:1px;
	padding-left:30px;
	border-radius:10px;
	width:830px
}
#content {
	border:8px solid #bbb;
	border-radius:10px;
	background:#ddd;
	width:820px;
	padding:10px
}
#main_layout {
	width:1080px
}
#info {
	border:4px solid #ffd478;
	background:#faf6aa;
	width:200px;
	margin-bottom:50px;
	position:absolute;
	top:80px;
	left:880px;
	padding:5px;
	font-size:1.1em
}
#googlead {
	width:200px;
	margin-bottom:50px;
	position:absolute;
	top:400px;
	left:880px
}
h1 {
	font-color:red
}
#accordion {
	float:right;
	width:200px;
	height:200px;
	margin-right:10px
}


#progressbar {
	width:400px;
	float:left
}
label {
	font-size:.6em;
	float:left
}

input[type=text] {
	float:left;
	font-size:1em;
	height:1.4em;
	width:70px
}

#results {
	background-color : transparent;
	width:810px
}
.stats {
	display:inline-block;
	border:1px solid #faf6aa;
	padding:.4em;
	margin:.4em;
	background:#f7d68a
}
.stats_table {
	border:1px;
	font-size:1.2em;
	border-collapse:collapse;
	background-color:#faf6aa
}
#server_stats,#sink_stats {
	display:none
}

.udo_form {
	padding:10px;
	background-color:white;
	width:240px;
	-moz-box-shadow:5px 5px 5px #ccc;
	-webkit-box-shadow:5px 5px 5px #ccc;
	box-shadow:5px 5px 5px #ccc

}
.settings_form {
	padding:10px;
	background-color:white;
	width:220px;
	-moz-box-shadow:5px 5px 5px #ccc;
	-webkit-box-shadow:5px 5px 5px #ccc;
	box-shadow:5px 5px 5px #ccc
}
.settings_form_close {
	position:absolute;
	width:20px;
	height:20px;
    float: right

}
.inline {
	display:inline
}
.shift-down {
	margin-bottom:-5px
}
strong {
	color:#f7b64a
}
#sample_models {
	padding:5px
	font-size: 300%;
}
.about_text {
	display:none
}
.navigation {
	list-style-type:none;
	padding-left:0;
	margin-left:0
}
.navigation a {
	text-decoration:none;
	display:block;
	padding:2px;
	border-bottom:dotted 1px black;
	font-size: 200%;
}
.navigation a:hover {
	background-color:#f7b64a;
	color:#fff;
	font-weight:bold;
	border-left:solid 5px black
}
.navigation a:link a:visited {
	color: #f7b64a
}

#source_name {
	margin-left: 67px;
}

#server_name {
	margin-left: 103px;
}

#sink_name {
	margin-left: 10px;
}

#func_name {
	margin-left: 10px;
}

#thermo_name {
	margin-left: 10px;
}

#reverser_name {
	margin-left: 10px;
}

#udo_save_btns_div {
	float: right
}




