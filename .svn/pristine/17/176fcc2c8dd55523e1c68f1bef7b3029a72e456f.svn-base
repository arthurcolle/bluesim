/* controls font size for buttons */ 
body {	
	font-size:65.5%;
	background-image:url('../images/blue.png');
}

h1 {
	color:#1c94c4;
	margin-bottom:0
}


.btn-xlarge {
    padding: 18px 28px;
    font-size: 22px;
    line-height: normal;
    -webkit-border-radius: 8px;
       -moz-border-radius: 8px;
            border-radius: 8px;
    }



p#subtitle {
	font-size:1.2em;
	text-transform:uppercase;
	color:#1c94c4
}
p.info {
	margin-left:30px;
	font-size:1.2em
}

